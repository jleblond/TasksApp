<aside class="span4">
  <section>
    <h1>
      Account Information
          <%= link_to  edit_admin_user_path(@user) do %>
              <span class="glyphicon glyphicon-edit" alt="edit"></span>
          <% end %>
    </h1>
  </section>
  <section>

    Name : <%= @user.name %>
    Email : <%= @user.email %>
    Last signed in :  <%= @user.last_sign_in_at %>
    User created : <%= @user.created_at %>
    Last account update : <%= @user.updated_at %>

    <ul class="user-roles">
      <% @user.roles.each do |ur| %>
          <li>
            <%=   ur.role_name %>
          </li>

      <% end %>
    </ul>

  </section>

  <%  #@user.inspect %>

</aside>
