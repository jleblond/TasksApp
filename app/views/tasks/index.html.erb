<h2><%= t("filter_titles.#{params[:filter]}") %></h2>
(Number of tasks: <%= @tasks.count %>)

<ul>
  <li> <%= link_to "Tasks Assigned",  tasks_path(filter:"assigned") %> </li>
  <li> <%= link_to "Tasks Authored",  tasks_path(filter:"authored") %> </li>
</ul>



<ul class="tasks">
  <% @tasks.each do |t| %>
      <li>
        <%=   t.id %>
        <%=   t.task_name %>
        <%= link_to "show",  task_path(t) %>
      </li>
  <% end %>
</ul>


