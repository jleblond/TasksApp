<h4>
  Comment &nbsp <span class="glyphicon glyphicon-comment"></span>
</h4>

<div class="row">
  <div class="span6 offset3">
    <%= form_for Comment.new, url: task_comments_path(@task), remote: true do |f| %>

        <%= f.text_area :text, class:"form-control", cols: "30", rows: "5" %>
        </br>
        <div class="text-right">
          <%= f.submit "Post", class: "btn btn-large btn-primary" %>
        </div>

        <% end %>
  </div>
</div>
