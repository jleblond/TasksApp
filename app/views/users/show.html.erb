<aside class="">
  <section>
    <h1>
      My Account
      <%= link_to  edit_user_path(current_user) do %>
          <span class="glyphicon glyphicon-edit" alt="edit"></span>
      <% end %>
    </h1>
  </section>
  <section>

    <table class="table table-sm">
      <thead>
      <tr>
        <th><%= @user.name %> (<%= @user.email %>)</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td>  Roles :</td>
        <td>
          <% @user.roles.each do |ur| %>
              <%=   ur.role_name %> &nbsp
          <% end %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td>Last account update : </td>
        <td><%= @user.updated_at %> </td>
        <td></td>
      </tr>
      </tbody>
    </table>

  </section>

  <%  #@user.inspect %>

</aside>

